<%= form_for @recipe do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>


    <%= f.fields_for :ingredients, @recipe.ingredients.build do |i| %>
        <p><%=i.label :name%></p>
        <%= i.text_field :name %>
    <%end%>

    <p><%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %></p>

    <%= f.submit %>
<% end %>